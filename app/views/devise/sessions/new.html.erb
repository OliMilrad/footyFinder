<div class="container">
  <div class="row">
    <div class="col">
      <div class="login-form-container" style="display: flex; justify-content: center; margin-top: 10%;">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
          <h2>Log in</h2>
          <div class="form-inputs" style="width: 300px;">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
            <%= render "devise/shared/links" %>
        <% end %>
      </div>
      </div>
  </div>
</div>
