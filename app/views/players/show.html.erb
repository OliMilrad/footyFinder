<h1>Players#show</h1>
<p>Find me in app/views/players/show.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <%= cl_image_tag @player.photo.key, height: 300, width: 400, crop: :fill %>
      <h1><%= @player.full_name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Position</th>
            <td><%= @player.position %></td>
          </tr>
          <tr>
            <th scope="row">Nationality</th>
            <td><%= @player.nationality %></td>
          </tr>
          <tr>
            <th scope="row">Location</th>
            <td><%= @player.location %></td>
          </tr>
          <tr>
            <th scope="row">Height</th>
            <td><%= @player.height %></td>
          </tr>
          <tr>
            <th scope="row">Age</th>
            <td><%= @player.age %></td>
          </tr>
          <tr>
            <th scope="row">Last Club</th>
            <td><%= @player.last_club %></td>
          </tr>
          <tr>
            <th scope="row">Market Price</th>
            <td><%= @player.price %></td>
          </tr>
        </tbody>
      </table>


<% if policy(@player).edit? %>
  <%= link_to "Edit this player", edit_player_path(@player) %> |
<% end %>

<%= button_to "Delete this player", @player, method: :delete if policy(@player).destroy? %>

<ul class="list-group">
  <% @player.bookings.each do |booking| %>
    <li class="list-group-item"><%= booking.date %></li>
    <%= link_to "Remove", player_booking_path(@player),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>
</ul>

<%= simple_form_for [@player, Booking.new] do |f| %>
<%= f.input :date, :collection => 2024..2030 %>
<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>

