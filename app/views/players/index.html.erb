






<div class="container p-3">
  <%= render "searchform" %>

  <div class="content p-3">
    <div class="cards-index">
      <% @players.each do |player| %>
        <div class="card-index rounded-4" style="width: 18rem;">
          <%= link_to player_path(player), class:"text-decoration-none" do%>
            <div class="img">
              <%= cl_image_tag player.photo.key, width: 151, height: 151 %>
            </div>
            <div class="card-player-info">
              <p class="card-index-text"><%= player.price.to_fs(:currency, round_mode: :down)%></p>
              <h2 class="card-index-title h1"><%= player.full_name%></h2>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
