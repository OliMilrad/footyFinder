<%= form_tag players_path, method: :get do %>
    <div class="input-group mb-3">
      <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search players...' %>
      <div class="input-group-append">
        <%= button_tag "Search", class: "btn btn-outline-secondary" %>
      </div>
    </div>
  <% end %>
