<div class="container-index"
  style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url(https://img.freepik.com/free-vector/gradient-style-football-field-background_23-2148995842.jpg)">
  <div class="container">


        <h1 class="p-3">All Players</h1>

  <table class="table">
    <thead class="myplayers">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Bookings</th>
        <th scope="col">Bookings to confirm</th>
        <th scope="col">Edit the player</th>
        <th scope="col">Remove the player</th>
      </tr>
    </thead>
    <tbody class="myplayers">
      <tr>
      <% i = 1 %>
  <% @myplayers.each do |player| %>
        <th scope="row"><%= i %></th>
        <td><%= link_to player.full_name, player_path(player) %></td>
        <td><%player.bookings.each do |booking|%><%= booking.date if booking.confirmed%> <% end %></td>
       <td><%player.bookings.each do |booking|%><%= link_to "#{booking.date}", player_booking_path(player, booking),  data: {turbo_method: :patch, turbo_confirm: "Confirm this booking?"} if booking.confirmed == false%> <% end %></td>
       <td><%= link_to "Edit", edit_player_path(player)%> </td>
       <td><%= link_to "Delete", player_path(player), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </td>
        <% i+=1 %>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>

</div>

