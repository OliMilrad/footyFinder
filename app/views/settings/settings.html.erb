<<h1>Settings</h1>

<%= form_with(model: current_user, url: user_path, method: :patch, local: true, html: {multipart: true}) do |form| %>
  <!-- Avatar -->
  <div class="form-group">
    <%= form.label :avatar %>
    <%= form.file_field :avatar, accept: 'image/png, image/jpeg', class: 'form-control' %>
    <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar, alt: "#{current_user.full_name}'s avatar", class: "avatar-class" %>
    <% else %>
      <!-- Display a default avatar or placeholder image -->
    <% end %>
  </div>

  <!-- Full Name -->
  <div class="form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: 'form-control' %>
  </div>

  <!-- Phone Number -->
  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: 'form-control' %>
  </div>

  <%= form.submit "Save Changes", class: "btn btn-primary" %>
<% end %>
